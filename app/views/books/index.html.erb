<h2>New book</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message  %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model:@book,local: true do |f| %>
    <div class="field ">
      <div>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div>
        <h4>本文</h4>
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>

</body>